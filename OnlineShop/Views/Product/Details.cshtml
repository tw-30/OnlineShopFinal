@model Product
@{
    ViewBag.Title = "Product Details";
}

<h1>Product Details</h1>
<div class="row">
    <div class="col-sm-4">
        <img src="~/images/@ViewBag.ImageFilename" 
             alt="@Model.Name Image" 
             class="img-responsive center-block"/>
    </div>

    <div class="col-sm-8">
        <h2>@Model.Name</h2>
        <table class="table table-bordered table-striped">
            <tr>
                <td>Product Name</td>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <td>Product Code</td>
                <td>@Model.Code</td>
            </tr>
            <tr>
                <td>List Price:</td>
                <td>@Model.Price.ToString("C")</td>
            </tr>
        </table>
        <a asp-controller="Cart" asp-action="Add"
            asp-route-id="@Model.Slug" class="btn btn-primary">Add to Cart</a>
    </div>
</div>